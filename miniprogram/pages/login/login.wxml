<!--pages/login/login.wxml-->
<van-cell-group inset>
  <van-field model:value="{{username}}" label="用户名" placeholder="输入用户名" />
  <van-field model:value="{{password}}" type="password" label="密码" placeholder="请输入密码" />
  <van-field model:value="{{checkCode}}" type="number" label="验证码" placeholder="请输入验证码" />
</van-cell-group>
<view class="loginButton">
  <van-button type="primary" round size="large" bindtap="login">登录</van-button>

</view>